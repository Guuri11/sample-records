{% extends 'base.html.twig' %}

{% block title %}Purchase{% endblock %}

{% block body %}
    <h1>Purchase</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ purchase.id }}</td>
            </tr>
            <tr>
                <th>Serial_number</th>
                <td>{{ purchase.serialNumber }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ purchase.date ? purchase.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ purchase.time ? purchase.time|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Received</th>
                <td>{{ purchase.received ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ purchase.address }}</td>
            </tr>
            <tr>
                <th>Town</th>
                <td>{{ purchase.town }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ purchase.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ purchase.country }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ purchase.comment }}</td>
            </tr>
            <tr>
                <th>Final_price</th>
                <td>{{ purchase.finalPrice }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ purchase.createdAt ? purchase.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ purchase.updatedAt ? purchase.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('purchase_index') }}">back to list</a>

    <a href="{{ path('purchase_edit', {'id': purchase.id}) }}">edit</a>

    {{ include('purchase/_delete_form.html.twig') }}
{% endblock %}
