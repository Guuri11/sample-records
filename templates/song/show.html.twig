{% extends 'base.html.twig' %}

{% block title %}Song{% endblock %}

{% block body %}
    <h1>Song</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ song.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ song.name }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ song.duration }}</td>
            </tr>
            <tr>
                <th>Video_src</th>
                <td>{{ song.videoSrc }}</td>
            </tr>
            <tr>
                <th>SongFileName</th>
                <td>{{ song.songFileName }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ song.imageName }}</td>
            </tr>
            <tr>
                <th>ImageSize</th>
                <td>{{ song.imageSize }}</td>
            </tr>
            <tr>
                <th>Released_at</th>
                <td>{{ song.releasedAt ? song.releasedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ song.createdAt ? song.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ song.updatedAt ? song.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('song_index') }}">back to list</a>

    <a href="{{ path('song_edit', {'id': song.id}) }}">edit</a>

    {{ include('song/_delete_form.html.twig') }}
{% endblock %}
