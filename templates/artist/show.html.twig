{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <h1>Artist</h1>

    {{ dump(artist) }}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>Alias</th>
                <td>{{ artist.alias }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ artist.surname }}</td>
            </tr>
            <tr>
                <th>Birth</th>
                <td>{{ artist.birth ? artist.birth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Is_from</th>
                <td>{{ artist.isFrom }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ artist.bio }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ artist.createdAt ? artist.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ artist.updatedAt ? artist.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ artist.imageName }}</td>
            </tr>
            <tr>
                <th>ImageSize</th>
                <td>{{ artist.imageSize }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('artist_index') }}">back to list</a>

    <a href="{{ path('artist_edit', {'id': artist.id}) }}">edit</a>

    {{ include('artist/_delete_form.html.twig') }}
{% endblock %}
